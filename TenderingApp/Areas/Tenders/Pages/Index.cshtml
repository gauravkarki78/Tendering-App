@page
@model TenderingApp.Areas.Tenders.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].RefNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].NoticeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].TenderDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].TenderDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tender[0].Organization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tender) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RefNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenderDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenderDoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.OrganizationName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TenderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TenderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TenderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
