@page
@model TenderingApp.Areas.Categories.Pages.DetailsModel

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.AboutCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.AboutCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Icon)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Category.Icon">
          </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Status)
            @*@Model.Category.Status*@
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryName">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
